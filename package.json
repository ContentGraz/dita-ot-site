{
  "name": "dita-ot.github.io",
  "version": "1.0.0",
  "description": "DITA-OT Website",
  "main": "gulpfile.js",
  "scripts": {
    "install": "./node_modules/.bin/gulp",
    "fix:config": "prettier --ignore-path .gitignore --write \"**/*.json\"",
    "fix:docs": "prettier --ignore-path .gitignore --write \"**/*.md\"",
    "fix:script": "npm run test:script -- --fix",
    "fix:style": "prettier --ignore-path .gitignore --write \"**/*.scss\"",
    "fix": "npm run fix:script && npm run fix:config && npm run fix:style && npm run fix:docs",
    "test:script": "eslint --ignore-path .gitignore \"**/*.js\"",
    "test": "npm run test:script",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"],
    "*.md": ["prettier --write", "git add"],
    "*.scss": ["prettier --write", "git add"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dita-ot/dita-ot.github.io.git"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/dita-ot/dita-ot.github.io",
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "browserify": "^12.0.1",
    "eslint": "4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "2.4.0",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.1",
    "gulp-watch": "^4.3.5",
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "prettier": "1.9.2"
  },
  "dependencies": {
    "jquery": "^2.2.3",
    "lodash": "^4.12.0"
  }
}
